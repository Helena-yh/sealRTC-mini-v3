.rong-login{
  display: flex;
}
.rong-login-main{
  width: 100%;
  position: absolute;
  z-index: 1;
  flex-direction: row;
  align-items: center;
}
.rong-login-bg{
  width: 100%;
  height: 100%;
}
.rong-bars{
  width: 65%;
  margin: 20% auto 0;
}
.rong-input-uid, .rong-input-roomid{
  width: 100%;
}

.rong-bar{
  margin: 100rpx 0 50rpx 0;
}

.rong-button-login{
  width: 100%;
  margin-top: 50rpx;
}

.rong-bars-title{
  margin: 8% auto;
  text-align: center;
  font-size: 60rpx;
}

.rong-phone-btn{
  background-color: #06144c87;
  float: right;
  top: -80rpx;
  font-weight: 400;
  z-index: 100;
  color: #dadada;  
}

.rong-phone-btn text{
  font-size: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
}

.rong-checkbox{
  margin-right: 40rpx;
  font-size: 20rpx;
}

.radio-group{
  text-align: center;
}

/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0394F0;
  border-color:#0394F0;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  border-radius: 50%;
}